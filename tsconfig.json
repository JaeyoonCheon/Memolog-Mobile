{
  "extends": "@tsconfig/react-native/tsconfig.json",
  "compilerOptions": {
    "baseUrl": "src",
    "paths": {
      "@api/*": ["api/*"],
      "@assets/*": ["assets/*"],
      "@components/*": ["components/*"],
      "@const/*": ["const/*"],
      "@hooks/*": ["hooks/*"],
      "@redux/*": ["redux/*"],
      "@screens/*": ["screens/*"],
      "@storage/*": ["storage/*"],
      "@styles/*": ["styles/*"],
      "@types/*": ["types/*"],
      "@/*": ["./*"]
    }
  }
}
